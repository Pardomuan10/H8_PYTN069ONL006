import numpy as np

x = np.linspace(-1,1,100)
y = np.array(x)
sbx=np.array([-3,3])
sbx2=np.array(0*sbx1)
import matplotlib.pyplot as plt
plt.plot(x,y,'r-')
plt.plot(sbx1,sbx2,'-k')
plt.xlim([-3, 3])
